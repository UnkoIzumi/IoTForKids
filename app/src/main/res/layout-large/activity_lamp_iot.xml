<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/well"
    tools:context=".lamp_iot">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/menuheader">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/backk1"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="30dp"
                android:translationZ="10dp"
                android:elevation="20dp"
                android:background="@drawable/backk"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/bangers"
                android:text="Lamp IoT"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/plus_pro"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="140dp"
                android:translationZ="10dp"
                android:elevation="20dp"
                android:background="@drawable/plus_btn" />

            <ImageButton
                android:id="@+id/set_ting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="20dp"
                android:translationZ="10dp"
                android:elevation="20dp"
                android:background="@drawable/setting_btn" />

            <ImageButton
                android:id="@+id/ruun"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="10dp"
                android:translationZ="10dp"
                android:elevation="20dp"
                android:background="@drawable/ruun"
                android:rotation="-30"/>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/led"
            android:text="     Lamp"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/change"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="175dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/off" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/shape_menu"
            android:onClick="on"
            android:text="ON"
            android:textSize="20sp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="230dp"
            android:background="@drawable/shape_menu"
            android:onClick="off"
            android:text="OFF"
            android:textSize="20sp" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/led"
            android:text="     LCD"
            android:textColor="@color/white"
            android:textSize="15sp" />
        <TextView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_marginStart="165dp"
            android:layout_marginTop="380dp"/>

        <TextView
            android:id="@+id/dataclaim"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="175dp"
            android:layout_marginVertical="408dp"
            android:fontFamily="monospace"
            android:textColor="#FFB300"
            android:textSize="40sp"
            android:elevation="5dp"
            android:translationZ="200dp"/>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>